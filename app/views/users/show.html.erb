<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'show',books: @books %>
    </div>
  </div>
</div>

<!--DM機能のために追加-->
<!--現在ログインしているユーザーではない,相互フォロー状態のときの条件式をつける-->
<% unless @user.id == current_user.id %>
  <% if (current_user.following? @user) && (@user.following? current_user)  %>
  <!--すでにチャットルームが作成されている時とされていない時の条件分岐をさせるため、@isRoomを使用-->
  <!--@isRoomがtrueの時は、チャットボタンを出現させすでに作成されたチャットへと移行することができる。-->
  <% if @isRoom == true %>
    <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-lg">チャットへ</a>
  <% else %>
  <!--falseの場合、form_forを使って、コントローラーにパラメーターを送るための記述-->
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, value: @user.id %>
      <% end %>
      <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
    <% end %>
  <% end %>
  <% end %>
<% end %>
