<table class="table table-hover table-inverse">
  <% if @range == "User" %>

    <h2>Users search for "<%= @word %>"</h2>
    <% if @users.present? %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th>introduction</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image, size: '50x50' %>
              <% end %>
            </td>
            <td><%=link_to user.name, user_path(user) %></td>
            <td><%= user.introduction %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <p style="text-align: center; font-weight: bold;">該当ユーザーはいません</p>
    <% end %>

  <% else %>

    <h2>Books search for "<%= @word %>"</h2>
    <% if @books.present? %>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image, size: '50x50' %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <p style="text-align: center; font-weight: bold;">該当の投稿はありません</p>
    <% end %>

  <% end %>
</table>